x1,x2,y1,y2,z1,z2,ps integer

begin

v1 := [x1,y1,z1];
v2 := [x2,y2,z2];
for v1<>0 do
for v2<>0 do 
ps:= [(x1*x2)+(y1*y2)+(z1*z2)];
write("the dot product of v1 and v2 is",ps);

end 

